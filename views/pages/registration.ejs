					<option value="1">A6A</option>
					<option value="1">A6B</option>
					<option value="1">A6C</option>
				</select>
			</div>

		<!-- Washtype -->
		<div class="form-group">
				<h3><label for="washerselect">Washer Setting</label></h3>
				<select multiple class="form-control" id="washtype" placeholder=".form-control-lg" required>
						<option value="1">Cotton</option>
						<option value="2">Mix/Synthetics</option>
						<option value="3">Hand Wash</option>
						<option value="4">Wool</option>
						<option value="5">Sport</option>
						<option value="6">Night wash</option>
						<option value="7">Biowash</option>
						<option value="8">Quick wash</option>
						<option value="9">Rinse</option>
						<option value="10">Softening</option>
						<option value="11">Spin</option>
						<option value="12">Perfect black</option>
						<option value="13">Ultra white</option>
				</select>
		</div>

